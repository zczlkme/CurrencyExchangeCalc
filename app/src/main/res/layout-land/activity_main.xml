<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hsport.currencyexchangecalculator.MainActivity"
    android:background="#2e71d6"
    android:contextClickable="false">

    <Button
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:text="Currency Calculator"

        android:id="@+id/Bt"
        android:background="#ffffff"
        android:textSize="16dp"
        android:elevation="@dimen/abc_action_bar_subtitle_bottom_margin_material"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:text="Exchange Rate"
        android:id="@+id/Bt1"
        android:background="#ffffff"
        android:textSize="16dp"
        android:layout_above="@+id/Bt2"
        android:layout_alignStart="@+id/Bt"
        android:layout_marginBottom="35dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:text="Group info"
        android:id="@+id/Bt2"
        android:background="#ffffff"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Bt1"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bello UCL, Hello World!"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="30dp" />

</RelativeLayout>


